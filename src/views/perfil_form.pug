extends layout

block content
  .container
    .row.justify-content-center
      .col-md-6
        .card.mt-5
          .card-body
            h1.text-center #{title}

            form(method='POST')
              .form-group
                label(for='name') Perfil:
                select#perfil.form-control(name='name' required)
                  option(value='PLAYER') PLAYER
                  option(value='ADM') ADM
              button.btn.btn-primary.btn-block(type='submit') Submit
