doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css", integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa; /* cor de fundo mais clara */
      }
      .sidebar {
        background-color: #343a40; /* cor de fundo do sidebar */
        color: #ffffff; /* cor do texto no sidebar */
        height: 100vh; /* altura total do sidebar */
        padding-top: 20px; /* espaço acima do conteúdo */
      }
      .sidebar-nav li {
        padding: 10px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1); /* linha divisória */
      }
      .sidebar-nav li a {
        color: #ffffff; /* cor dos links */
      }
      .sidebar-nav li a:hover {
        color: #f8f9fa; /* cor do texto ao passar o mouse */
        background-color: #495057; /* cor de fundo ao passar o mouse */
      }
      .content {
        padding: 20px; /* espaçamento interno do conteúdo principal */
      }
  body
    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2 sidebar')
          block sidebar
            ul(class='sidebar-nav')
              li
                a(href='/') Home
              li
                a(href='/torneio') Torneios
              li
                a(href='/chave') Chaves
              li
                a(href='/signup') Registre-se
              li
                a(href='/user') Conta
                hr
            
        div(class='col-sm-10 content')
          block content
            h1 #{title}
            p Bem-vindo ao sistema!
